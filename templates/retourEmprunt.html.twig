{% extends 'base.html.twig' %}

{% block title %}Choix du livre - Bibliothèque de l'école de Boursonne{% endblock %}
{% block body %}
    {% block content %}
        <div class="container-fluid">
            <div class="row">
                <ul>
                    <li><a href="/BibliothequeEcole/public/" class="active">Accueil</a></li>
                    <li><a href="/Bibliotheque">Bibliothèque</a></li>
                    <li><a href="/BibliothequeEcole/public/Eleves">Élèves</a></li>
                    <li><a href="/BibliothequeEcole/public/Emprunts">Emprunts</a></li>
                </ul>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <h1>Retour d'un livre</h1>
                 {% if emprunt.eleve.image.url is defined %}
                    <div>
                        <img src='../../{{emprunt.eleve.image.url}}' style='width:20vw;'>
                    </div>
                {% endif %}
                {% if emprunt.livre.image.url is defined %}
                    <div>
                        <img src='../../{{emprunt.livre.image.url}}' style='width:20vw;'>
                    </div>
                {% else %}   
                    <div>{{emprunt.livre.titre}}</div>
                {% endif %}
                <form method="post" action="/BibliothequeEcole/public/Emprunt/Retour/{{emprunt.id}}" role="form">
                    <div class="form-group">
                        <label for="code">Code barre</label>
                        <input type='number' name="code">
                    </div>
                    <button type="submit" class="btn btn-primary">Valider</button>
                </form>
            </div>
        </div>
    {% endblock %}
{% endblock %}