{% extends 'base.html.twig' %}

{% block title %}Ajouter élève - Bibliothèque de l'école de Boursonne{% endblock %}
{% block body %}
    {% block content %}
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <ul>
                        <li><a href="/BibliothequeEcole/public/">Accueil</a></li>
                        <li><a href="/BibliothequeEcole/public/Bibliotheque">Bibliothèque</a></li>
                        <li><a href="/BibliothequeEcole/public/Eleves"  class="active">Élèves</a></li>
                        <li><a href="/BibliothequeEcole/public/Emprunts">Emprunts</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1>Bibliothèque de l'école de Boursonne</h1>
                    <h3>Ajouter un élève</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <form method="post" action="/BibliothequeEcole/public/Eleves/Enregistrer" role="form" enctype="multipart/form-data"> 
                        <div class="form-group">
                            <label for="nom">Nom</label>
                            <input type="text"  name="nom" class="form-control"  placeholder="Nom de l'élève">
                        </div>
                        <div class="form-group">
                            <label for="prenom">Prénom</label>
                            <input type="text"  name="prenom" class="form-control"  placeholder="Prénom de l'élève">
                        </div>
                        <div class="form-group">
                            <label for="niveau">Niveau</label>
                            <input type="text" name="niveau" class="form-control"  placeholder="Niveau de l'élève">
                        </div>
                        <div class="form-group">
                            <label for="niveau">Photo</label>
                            <input class='' type="file" name="photoEleve" id="photoEleve">
                        </div>
                        <div class='text-center'>
                            <button type="submit" name="submit" class="btn btn-primary">Valider</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}