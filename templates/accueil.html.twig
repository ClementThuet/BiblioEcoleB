{% extends 'base.html.twig' %}

{% block title %}Accueil - Bibliothèque de l'école de Boursonne{% endblock %}
{% block body %}
    {% block content %}
        <div class="container-fluid">
            <div class="row">
                <ul>
                    <li><a href="/BibliothequeEcole/public/" class="active">Accueil</a></li>
                    <li><a href="Bibliotheque">Bibliothèque</a></li>
                    <li><a href="/BibliothequeEcole/public/Eleves">Élèves</a></li>
                    <li><a href="/BibliothequeEcole/public/Emprunts">Emprunts</a></li>
                </ul>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <h1>Bienvenue les loulous</h1>
                <p> Ici on aura la liste des élèves </p>
            </div>
            {%for eleve in eleves %}
                <div >
                    <img style="width:10vw;" src="{{eleve.image.url}}">
                </div>
                <a href="/BibliothequeEcole/public/Emprunt/Eleve/{{eleve.id}}"<p>{{eleve.nom }} {{eleve.prenom }}</p></a>
            {%endfor%}
        </div>
       
    {% endblock %}
{% endblock %}