{% extends 'base.html.twig' %}

{% block title %}Ajouter livre - Bibliothèque de l'école de Boursonne{% endblock %}
{% block body %}
    {% block content %}
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <ul>
                        <li><a href="/BibliothequeEcole/public/" class="active">Accueil</a></li>
                        <li><a href="/BibliothequeEcole/public/Bibliotheque">Bibliothèque</a></li>
                        <li><a href="/BibliothequeEcole/public/Eleves">Élèves</a></li>
                        <li><a href="/BibliothequeEcole/public/Emprunts">Emprunts</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1>Bibliothèque de l'école de Boursonne</h1>
                    <h3>Ajouter un livre</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <form method="post" action="/BibliothequeEcole/public/Bibliotheque/Enregistrer" role="form" enctype="multipart/form-data"> 
                        <div class="form-group">
                            <label for="titre">Titre</label>
                            <input type="text"  name="titre" class="form-control"  placeholder="Titre du livre">
                        </div>
                        <div class="form-group">
                            <label for="auteur">Auteur</label>
                            <input type="text"  name="auteur" class="form-control"  placeholder="Auteur du livre">
                        </div>
                        <div class="form-group">
                            <label for="theme">Thème</label>
                            <input type="text" name="theme" class="form-control"  placeholder="Thème du livre">
                        </div>
                        <div class="form-group">
                            <label for="code">Code</label>
                            <input type="text" name="code" class="form-control"  placeholder="Code du livre">
                        </div>
                        <div class="form-group">
                            <label for="biblioOrigine">Bibliothèque d'origine</label>
                            <input type="text" name="biblioOrigine" class="form-control"  placeholder="Bibliothèque d'origine du livre">
                        </div>
                        <div class="form-group">
                            <label for="photoLivre">Photo</label>
                            <input  type="file" name="photoLivre" id="photoLivre">
                        </div>
                        <div class='text-center'>
                            <button type="submit" name="submit" class="btn btn-primary">Valider</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}